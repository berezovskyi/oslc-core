<?xml version="1.0" encoding="UTF-8"?>
<project name="ShapeChecker" default="makejar" basedir=".">

    <!-- Public targets -->

    <target name="makejar" description="Create a jar for ShapeChecker">
        <jar jarfile="lib/shapechecker.jar" basedir="bin">
            <manifest>
                <attribute name="Main-Class" value="net.open_services.scheck.shapechecker.Main"/>
            </manifest>
        </jar>
    </target>

    <target name="clean" description="Remove jar file">
        <delete file="lib/shapechecker.jar" />
    </target>

</project>
